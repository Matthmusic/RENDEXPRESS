{
  "name": "electron-react",
  "description": "Rendexpress - générateur d'arborescence email (Electron + React + Python).",
  "author": "Matthieu Maurel",
  "private": true,
  "version": "0.0.3",
  "type": "commonjs",
  "main": "electron/main.cjs",
  "build": {
    "appId": "com.rendexpress.app",
    "productName": "Rendexpress",
    "directories": {
      "output": "dist",
      "buildResources": "electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "../python_backend/**/*",
      "python_runtime/**/*"
    ],
    "extraResources": [
      {
        "from": "../python_backend",
        "to": "python_backend"
      },
      {
        "from": "python_runtime",
        "to": "python_runtime"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "electron/rendexpress.ico",
      "artifactName": "Rendexpress-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:electron": "npm run build && electron-builder build --win",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "electron:dev": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "start": "npm run electron"
  },
  "dependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "cross-spawn": "^7.0.6",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "wait-on": "^9.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
